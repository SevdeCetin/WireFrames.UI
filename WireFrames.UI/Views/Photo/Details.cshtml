@model PhotoDetailViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Photo Details</h2>

<div>
    <h3>@Model.Photo.Title</h3>
    <img src="@Url.Content(Model.Photo.FilePath)" alt="Photo" />
    <p>Tags: @Model.Tags</p>
</div>
<form asp-action="Delete" asp-controller="Photo" method="post">
    <input type="hidden" name="id" value="@Model.Photo.PhotoID" />
    <button type="submit" onclick="return confirm('Are you sure you want to delete this photo?')">Delete</button>
</form>
