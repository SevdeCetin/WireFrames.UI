@using WireFrames.Entity.Concrete
@model List<Photo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/custom.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap-grid.css" rel="stylesheet" />
<h1 style="align-content:center">My Photos</h1>
<div class="container">
    @if (Model.Count < 0)
    {
        <p>
            Welcome to your favourite website
        </p>

    }
    else
    {
        <div class="photo-container">

            @foreach (var photo in Model)
            {
                <div class="photo-item">

                    <h3>@photo.Title</h3>
                    <img src="@Url.Content(photo.FilePath)" alt="Photo" />
                    <a asp-action="Details" asp-controller="Photo" asp-route-id="@photo.PhotoID">View Details</a>
                </div>
            }
        </div>
    }

    <div class="btn btn-outline-primary" style="margin:20px">
        @Html.ActionLink("Upload Photo", "Upload", "Photo")
    </div>

</div>

